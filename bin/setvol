#!/usr/bin/env bash

for i in $@
do
  case $i in 
    mute|unmute|toggle)
      vol=$i
      ;;
    *)
      regex='^[0-9]{1,3}[-+%]*$'
      if [[ "$i" =~ $regex ]]
      then
        vol=$i
      else
        host=$i
      fi
      ;;
  esac
done

string="Setting volume to $vol"
cmd="amixer set Master $vol > /dev/null"
if [ $host ]
then
  string+=" on $host"
  cmd="ssh $host $cmd"
fi

echo $string

$cmd
